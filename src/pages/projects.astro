---
import BaseLayout from '../layouts/BaseLayout.astro';
const allProjects = await Astro.glob('../pages/projects/*.md');
const pageTitle = "My Projects";
---
<BaseLayout pageTitle={pageTitle}>
      <p>Check out my projects and feel free to use them</p>
    <ul>
      {allProjects.map((proj) => <li>
                                    <a href={proj.url}>
                                      <img src={proj.frontmatter.image.url} alt="Weather App Logo">{proj.frontmatter.title}
                                    </a>
                                 </li>)}
      
      <!--
        <li><a href="/projects/weather/">Weather App</a></li>
        <li><a href="/projects/space/">NASA SpaceEx App</a></li>
      -->
    </ul>
</BaseLayout>

